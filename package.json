{
  "name": "seal",
  "version": "0.3.0",
  "description": "Cryptographic time-locked encryption for the browser using drand and AES-GCM",
  "type": "module",
  "author": "Janko <simonovic86@gmail.com>",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/simonovic86/seal.git"
  },
  "bugs": {
    "url": "https://github.com/simonovic86/seal/issues"
  },
  "homepage": "https://github.com/simonovic86/seal#readme",
  "keywords": [
    "encryption",
    "cryptography",
    "time-lock",
    "tlock",
    "drand",
    "timelock",
    "aes-gcm",
    "zero-knowledge",
    "decentralized",
    "pwa"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,css,html}\"",
    "type-check": "tsc --noEmit",
    "stop": "lsof -ti:3000 | xargs kill -9 2>/dev/null || echo 'No server running on port 3000'",
    "restart": "npm run stop && npm run dev"
  },
  "dependencies": {
    "idb-keyval": "^6.2.2",
    "tlock-js": "^0.9.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "24.1.3",
    "prettier": "^3.2.4",
    "terser": "^5.44.1",
    "typescript": "^5",
    "vite": "^5.4.21",
    "vitest": "^1.2.0"
  }
}
