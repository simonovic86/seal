<?xml version="1.0" encoding="utf-8"?>
<!--
  Network Security Configuration for Seal
  
  This config allows connections to IPFS gateways over HTTPS.
  No cleartext (HTTP) traffic is permitted.
-->
<network-security-config>
    <!-- Base config: HTTPS only, no cleartext -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- IPFS Gateway domains - HTTPS only -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">ipfs.io</domain>
        <domain includeSubdomains="true">dweb.link</domain>
        <domain includeSubdomains="true">cloudflare-ipfs.com</domain>
        <domain includeSubdomains="true">pinata.cloud</domain>
        <domain includeSubdomains="true">w3s.link</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
